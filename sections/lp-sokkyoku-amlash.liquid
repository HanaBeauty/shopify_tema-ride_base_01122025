<section class="hb-lp-sokkyoku" aria-label="Landing page Adesivo Sokkyoku AmLash">
  <style>
    .hb-lp-sokkyoku {
      background: #ffffff;
      color: #111827;
    }

    .hb-lp-sokkyoku .hb-lp-section {
      padding: 48px 0;
    }

    .hb-lp-sokkyoku .hb-lp-hero {
      padding: 56px 0;
      background: linear-gradient(135deg, #370018 0%, #bf1b5a 40%, #e61e64 100%);
      color: #fdf2f8;
    }

    .hb-lp-sokkyoku .hb-lp-hero__grid {
      display: grid;
      gap: 32px;
      align-items: center;
    }

    @media (min-width: 768px) {
      .hb-lp-sokkyoku .hb-lp-hero__grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }

    .hb-lp-sokkyoku .hb-eyebrow {
      letter-spacing: 0.08em;
      text-transform: uppercase;
      font-weight: 700;
      font-size: 0.85rem;
      color: #ffe4ef;
      margin-bottom: 12px;
      display: inline-flex;
      gap: 8px;
      align-items: center;
    }

    .hb-lp-sokkyoku .hb-eyebrow svg {
      width: 16px;
      height: 16px;
      color: currentColor;
    }

    .hb-lp-sokkyoku h1,
    .hb-lp-sokkyoku h2,
    .hb-lp-sokkyoku h3 {
      margin-bottom: 16px;
      line-height: 1.2;
    }

    .hb-lp-sokkyoku h1 {
      font-size: clamp(2rem, 4vw, 2.75rem);
      color: #ffffff;
    }

    .hb-lp-sokkyoku h2 {
      font-size: clamp(1.5rem, 3.2vw, 2rem);
      color: #111827;
    }

    .hb-lp-sokkyoku h3 {
      font-size: 1.1rem;
      color: #111827;
    }

    .hb-lp-sokkyoku p {
      margin-bottom: 14px;
      color: #1f2937;
    }

    .hb-lp-sokkyoku .hb-tagline {
      color: #ffe4ef;
      font-size: 1.05rem;
      margin-bottom: 20px;
      max-width: 640px;
    }

    .hb-lp-sokkyoku .hb-button-group {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      align-items: center;
      margin-top: 18px;
    }

    .hb-lp-sokkyoku .hb-hero-meta {
      display: grid;
      gap: 12px;
      margin-top: 20px;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    }

    .hb-lp-sokkyoku .hb-card {
      background: #ffffff;
      border-radius: 14px;
      padding: 18px;
      box-shadow: 0 12px 32px rgba(15, 23, 42, 0.08);
    }

    .hb-lp-sokkyoku .hb-pill {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 12px;
      background: #ffe4ef;
      color: #370018;
      border-radius: 999px;
      font-weight: 600;
      font-size: 0.95rem;
    }

    .hb-lp-sokkyoku .hb-grid {
      display: grid;
      gap: 20px;
    }

    @media (min-width: 768px) {
      .hb-lp-sokkyoku .hb-grid.cols-2 {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
      .hb-lp-sokkyoku .hb-grid.cols-3 {
        grid-template-columns: repeat(3, minmax(0, 1fr));
      }
    }

    .hb-lp-sokkyoku .hb-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      gap: 14px;
    }

    .hb-lp-sokkyoku .hb-list__item {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 12px;
      align-items: start;
    }

    .hb-lp-sokkyoku .hb-icon-check {
      width: 20px;
      height: 20px;
      color: #16a34a;
      flex-shrink: 0;
    }

    .hb-lp-sokkyoku .hb-subtle {
      color: #4b5563;
      font-size: 0.98rem;
    }

    .hb-lp-sokkyoku .hb-highlight {
      color: #e61e64;
      font-weight: 700;
    }

    .hb-lp-sokkyoku .hb-muted-bg {
      background: #fff5f8;
    }

    .hb-lp-sokkyoku .hb-quote {
      border-left: 4px solid #bf1b5a;
      padding-left: 14px;
      color: #111827;
      font-weight: 600;
    }

    .hb-lp-sokkyoku .hb-testimonial {
      display: grid;
      gap: 8px;
    }

    .hb-lp-sokkyoku .hb-faq details {
      border: 1px solid #e5e7eb;
      border-radius: 10px;
      padding: 14px 16px;
      background: #ffffff;
      box-shadow: 0 6px 20px rgba(15, 23, 42, 0.05);
    }

    .hb-lp-sokkyoku .hb-faq summary {
      cursor: pointer;
      font-weight: 700;
      color: #111827;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .hb-lp-sokkyoku .hb-faq summary::-webkit-details-marker {
      display: none;
    }

    .hb-lp-sokkyoku .hb-faq summary:after {
      content: "+";
      font-weight: 700;
      margin-left: 12px;
    }

    .hb-lp-sokkyoku .hb-faq details[open] summary:after {
      content: "−";
    }

    .hb-lp-sokkyoku .hb-faq p {
      margin-top: 10px;
    }

    .hb-lp-sokkyoku .hb-footer {
      text-align: center;
      padding: 36px 0 48px;
    }

    .hb-lp-sokkyoku .hb-ribbon {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: #370018;
      color: #ffe4ef;
      padding: 10px 14px;
      border-radius: 12px;
      box-shadow: 0 10px 28px rgba(15, 23, 42, 0.25);
    }

    .hb-lp-sokkyoku .hb-metric {
      font-size: 1.1rem;
      font-weight: 600;
      color: #111827;
      margin-bottom: 4px;
    }
  </style>

