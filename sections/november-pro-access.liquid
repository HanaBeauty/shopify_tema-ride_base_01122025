{% comment %}
Section: November Pro Access — Abastecimento sob medida
{% endcomment %}
<section class="npax container mx-auto px-4 py-10">
  <div class="text-center max-w-3xl mx-auto">
    <h1 class="text-3xl md:text-4xl font-semibold mb-3">November Pro Access</h1>
    <p class="text-lg opacity-90 mb-6">Estoque garantido para dezembro, agenda livre para atender. Você define itens e quantidades; nós garantimos disponibilidade e enviamos em 2 ou 3 etapas.</p>
  </div>

  <div class="grid md:grid-cols-3 gap-6 mb-10">
    <div class="rounded-2xl p-5 shadow">
      <h3 class="font-medium mb-2">Abastecimento sob medida</h3>
      <p class="text-sm opacity-90">Lista definida por você. Sem kits obrigatórios.</p>
    </div>
    <div class="rounded-2xl p-5 shadow">
      <h3 class="font-medium mb-2">Split shipping (2 ou 3 drops)</h3>
      <p class="text-sm opacity-90">Calendário planejado para preservar eficiência dos insumos.</p>
    </div>
    <div class="rounded-2xl p-5 shadow">
      <h3 class="font-medium mb-2">Price-lock & SLA</h3>
      <p class="text-sm opacity-90">Preço protegido até {{ section.settings.price_lock_date }} e expedição priorizada.</p>
    </div>
  </div>

  <div class="rounded-2xl p-6 shadow mb-8">
    <h3 class="font-medium mb-4">Selecione seu modelo de envio</h3>
    <div class="grid md:grid-cols-2 gap-4">
      <div class="rounded-xl p-4 border">
        <p class="text-sm mb-2"><strong>2 drops</strong> — sugerido para alto giro e estoque controlado.</p>
        <ul class="list-disc ml-5 text-sm">
          <li>Drop 1: {{ section.settings.two_drop_1_pct }}% ({{ section.settings.two_drop_1_date }})</li>
          <li>Drop 2: {{ section.settings.two_drop_2_pct }}% ({{ section.settings.two_drop_2_date }})</li>
        </ul>
      </div>
      <div class="rounded-xl p-4 border">
        <p class="text-sm mb-2"><strong>3 drops</strong> — sugerido para eficiência máxima de adesivos.</p>
        <ul class="list-disc ml-5 text-sm">
          <li>Drop 1: {{ section.settings.three_drop_1_pct }}% ({{ section.settings.three_drop_1_date }})</li>
          <li>Drop 2: {{ section.settings.three_drop_2_pct }}% ({{ section.settings.three_drop_2_date }})</li>
          <li>Drop 3: {{ section.settings.three_drop_3_pct }}% ({{ section.settings.three_drop_3_date }})</li>
        </ul>
      </div>
    </div>
    <p class="text-xs opacity-70 mt-3">Swap de até {{ section.settings.swap_limit }}% do pedido total até {{ section.settings.swap_deadline }}. Pontos em dobro em SKUs críticos.</p>
  </div>

  {% if section.settings.show_custom_html %}
    <div class="rounded-2xl p-6 shadow mb-8">
      {{ section.settings.custom_html }}
    </div>
  {% endif %}

  {%- assign wa_phone = section.settings.whatsapp_phone | strip | default: '5511947393315' -%}
  {%- assign wa_msg = section.settings.whatsapp_message | default: 'Quero minha reserva Pro Access' -%}
  {%- assign wa_url = 'https://wa.me/' | append: wa_phone | append: '?text=' | append: wa_msg | url_encode -%}

  <div class="text-center">
    <a class="inline-block rounded-full px-6 py-3 text-white" style="background:#000000"
       href="{{ wa_url }}" target="_blank" rel="noopener">
      Configurar meu abastecimento via WhatsApp
    </a>
    {% if section.settings.alt_cta_enable %}
      <div class="mt-3">
        <a class="underline text-sm" href="{{ section.settings.alt_cta_link }}">Prefiro preencher um formulário</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "November Pro Access",
  "settings": [
    { "id": "price_lock_date", "type": "text", "label": "Data do price-lock", "default": "15/12/2025" },

    { "type": "header", "content": "2 Drops" },
    { "id": "two_drop_1_pct", "type": "text", "label": "Drop 1 (%)", "default": "60" },
    { "id": "two_drop_1_date", "type": "text", "label": "Data Drop 1", "default": "Imediato" },
    { "id": "two_drop_2_pct", "type": "text", "label": "Drop 2 (%)", "default": "40" },
    { "id": "two_drop_2_date", "type": "text", "label": "Data Drop 2", "default": "05–10/dez" },

    { "type": "header", "content": "3 Drops" },
    { "id": "three_drop_1_pct", "type": "text", "label": "Drop 1 (%)", "default": "40" },
    { "id": "three_drop_1_date", "type": "text", "label": "Data Drop 1", "default": "Imediato" },
    { "id": "three_drop_2_pct", "type": "text", "label": "Drop 2 (%)", "default": "30" },
    { "id": "three_drop_2_date", "type": "text", "label": "Data Drop 2", "default": "25–28/nov" },
    { "id": "three_drop_3_pct", "type": "text", "label": "Drop 3 (%)", "default": "30" },
    { "id": "three_drop_3_date", "type": "text", "label": "Data Drop 3", "default": "10–12/dez" },

    { "type": "header", "content": "Regras e CTA" },
    { "id": "swap_limit", "type": "text", "label": "Swap (%)", "default": "10" },
    { "id": "swap_deadline", "type": "text", "label": "Prazo swap", "default": "20/12/2025" },

    { "type": "header", "content": "WhatsApp (montagem automática do link)" },
    { "id": "whatsapp_phone", "type": "text", "label": "Telefone (somente dígitos com DDI)", "default": "5511947393315" },
    { "id": "whatsapp_message", "type": "text", "label": "Mensagem padrão", "default": "Quero minha reserva Pro Access" },

    { "type": "header", "content": "CTA alternativo (formulário)" },
    { "id": "alt_cta_enable", "type": "checkbox", "label": "Mostrar CTA alternativo (form)", "default": false },
    { "id": "alt_cta_link", "type": "text", "label": "Link do formulário (URL completa)" },

    { "type": "header", "content": "Bloco de Formulário/Embed" },
    { "id": "show_custom_html", "type": "checkbox", "label": "Exibir bloco HTML personalizado", "default": false },
    { "id": "custom_html", "type": "html", "label": "HTML personalizado (ex.: embed ActiveCampaign)" }
  ],
  "presets": [{ "name": "November Pro Access — Landing" }]
}
{% endschema %}
