          "disabled": true,
          "settings": {
            "custom_liquid": "<!-- SendPulse WhatsApp/Instagram Widget -->\n<script src=\"//fbstore.sendpulse.com/loader.js\"\n        data-sp-widget-id=\"00e525f3-9a59-42cf-8eb8-ffa1892c3c3c\"\n        async></script>\n<!-- /SendPulse Widget -->\n\n<script>\n(function () {\n  // ========= Helpers =========\n  function getUserEmail() {\n    try {\n      // Mant√©m compatibilidade com sua chave antiga\n      const localEmail = localStorage.getItem(\"email_usuario\");\n      if (localEmail) return localEmail;\n\n      // Tentativas adicionais (Shopify/checkout etc.)\n      if (window.Shopify && Shopify.customer && Shopify.customer.email) {\n        return Shopify.customer.email;\n      }\n    } catch (e) {}\n    return \"visitante\";\n  }\n\n  function pageContext() {\n    var url = new URL(window.location.href);\n    return {\n      url: url.toString(),\n      path: url.pathname,\n      host: url.host,\n      title: document.title || \"\",\n      referrer: document.referrer || \"\",\n    };\n  }\n\n  // Dispara para todos os destinos de analytics encontrados\n  function trackAll(name, props) {\n    var payload = Object.assign({\n      event: name,\n      email: getUserEmail(),\n      device: navigator.userAgent,\n      timestamp: new Date().toISOString()\n    }, props || {}, pageContext());\n\n    // GTM (dataLayer)\n    if (window.dataLayer && Array.isArray(window.dataLayer)) {\n      window.dataLayer.push(payload);\n    }\n    // GA4 (gtag)\n    if (typeof window.gtag === \"function\") {\n      window.gtag(\"event\", name, payload);\n    }\n    // Meta Pixel\n    if (typeof window.fbq === \"function\") {\n      window.fbq(\"trackCustom\", name, payload);\n    }\n    // TikTok Pixel\n    if (window.ttq && typeof window.ttq.track === \"function\") {\n      window.ttq.track(name, payload);\n    }\n    // Compat/Fallback Freshsales (se ainda existir)\n    if (typeof window.FM !== \"undefined\" && FM.trackCustomEvent) {\n      FM.trackCustomEvent(name, payload);\n    }\n    // Log de debug (remova em produ√ß√£o, se quiser)\n    if (window.console && console.debug) console.debug(\"[track]\", name, payload);\n  }\n\n  // Gera uma mensagem pr√©-preenchida para o WhatsApp + UTMs\n  function enrichWhatsAppHref(a) {\n    try {\n      var href = a.getAttribute(\"href\");\n      if (!href) return;\n\n      // S√≥ processa links de WhatsApp\n      var isWA = /wa\\.me|api\\.whatsapp\\.com|whatsapp:\\/\\//i.test(href);\n      if (!isWA) return;\n\n      // N√£o duplica\n      if (a.dataset.spWatracked === \"1\") return;\n\n      var ctx = pageContext();\n      var base = href.split(\"?\")[0];\n\n      // UTM padr√£o para capta√ß√£o via widget\n      var utm = new URLSearchParams({\n        utm_source: \"sendpulse\",\n        utm_medium: \"whatsapp_widget\",\n        utm_campaign: \"lead_capture\",\n        utm_content: (document.body.dataset.pageType || \"generic\")\n      });\n\n      // Mensagem pr√©-preenchida (ajuste o texto conforme sua estrat√©gia)\n      var msg = [\n        \"Ol√°, equipe Hana Beauty! üëã\",\n        \"Encontrei voc√™s pelo site e quero falar sobre este conte√∫do/p√°gina:\",\n        ctx.title,\n        ctx.url + (ctx.url.includes(\"?\") ? \"&\" : \"?\") + utm.toString()\n      ].join(\"\\n\");\n\n      var params = new URLSearchParams(href.split(\"?\")[1] || \"\");\n      // S√≥ seta text se ainda n√£o existir\n      if (!params.has(\"text\")) {\n        params.set(\"text\", msg);\n      }\n\n      var finalHref = base + \"?\" + params.toString();\n      a.setAttribute(\"href\", finalHref);\n      a.dataset.spWatracked = \"1\";\n    } catch (e) {}\n  }\n\n  // Anexa listeners a links WhatsApp/Instagram\n  function wireLink(a) {\n    if (!a || a.dataset.spWired === \"1\") return;\n    var href = a.getAttribute(\"href\") || \"\";\n    var isWA = /wa\\.me|api\\.whatsapp\\.com|whatsapp:\\/\\//i.test(href);\n    var isIG = /instagram\\.com/i.test(href);\n\n    if (!(isWA || isIG)) return;\n\n    // Enriquecimento de WhatsApp (prefill + UTM)\n    if (isWA) enrichWhatsAppHref(a);\n\n    a.addEventListener(\"click\", function () {\n      trackAll(isWA ? \"click_whatsapp_sendpulse\" : \"click_instagram_sendpulse\", {\n        link_href: a.getAttribute(\"href\") || \"\",\n        link_text: (a.innerText || a.getAttribute(\"aria-label\") || \"\").trim()\n      });\n    }, { passive: true });\n\n    a.dataset.spWired = \"1\";\n  }\n\n  // Escaneia a p√°gina por √¢ncoras relevantes\n  function scan() {\n    var anchors = document.querySelectorAll('a[href*=\"wa.me\"], a[href*=\"api.whatsapp.com\"], a[href^=\"whatsapp://\"], a[href*=\"instagram.com\"]');\n    anchors.forEach(wireLink);\n  }\n\n  // Observa muta√ß√µes do DOM (o widget do SendPulse √© injetado async)\n  var mo = new MutationObserver(function () {\n    scan();\n  });\n  mo.observe(document.documentElement || document.body, { subtree: true, childList: true, attributes: true });\n\n  // Primeira varredura\n  if (document.readyState === \"loading\") {\n    document.addEventListener(\"DOMContentLoaded\", scan);\n  } else {\n    scan();\n  }\n})();\n</script>"
